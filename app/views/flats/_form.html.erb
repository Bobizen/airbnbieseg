<%= simple_form_for(flat) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification flat: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :title %>
        <%= f.input :homepagetitle %>
        <%= f.input :address %>
        <%= f.input :city %>
        <%= f.input :description %>
        <%= f.input :country, as: :string %>
        <%= f.input :price_per_night %>
        <%= f.input :photos, as: :file, input_html: { multiple: true }, label:'Add photos for your flat' %>
      </div>

      <div class="form-actions">
        <%= f.submit "Propose a flat", class:"btn btn-primary" %>
      </div>
<% end %>
