<div class="container">
  <h1>Modify your ad for the flat</h1>
  <%= simple_form_for(@flat, html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification flat: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :title %>
          <%= f.input :homepagetitle, label: 'Short title' %>
          <%= f.input :street_address %>
          <%= f.input :zipcode %>
          <%= f.input :city %>
          <%= f.input :country, as: :string %>
          <%= f.input :description %>
          <%= f.input :price_per_night, label: 'Price per night (in â‚¬)' %>
          <% @flat.photos.each do |photo| %>
            <%= f.hidden_field :photos, multiple: true, value: photo.signed_id %>
          <% end %>
          <%= f.input :photos, as: :file, input_html: { multiple: true }, label:'Add photos for your flat' %>
        </div>

        <div class="form-actions">
          <%= f.submit "Update your flat", class:"btn btn-primary" %>
        </div>
  <% end %>
</div>
