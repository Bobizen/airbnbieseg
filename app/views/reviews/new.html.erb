<!-- app/views/reviews/new.html.erb -->
<div class="container-review">
  <div class="form-wrapper">
    <div class="form-container">
      <h2>Add Review</h2>
      <%= simple_form_for([@flat, @review]) do |f| %>
        <div class="form-inputs">
          <%= f.input :title %>
          <%= f.input :comment, as: :text %>
          <%= f.input :score, collection: [[1, "1 star"], [2, "2 stars"], [3, "3 stars"], [4, "4 stars"], [5, "5 stars"]],
          prompt: "Select a Score", input_html: { value: @review.score || 1 } %> <!-- Set default value to 1 if @review.score is nil -->
          <!-- Add any other fields you need for the review -->
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Submit Review" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
