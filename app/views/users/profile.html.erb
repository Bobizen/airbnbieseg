<div class="container">
  <h1>Modify your profile</h1>
  <%= simple_form_for(@user, html: { method: :put }) do |f| %>
  <div class="form-inputs">
      <%= f.input :legal_name %>
      <%= f.input :address %>
      <%= f.input :government_id %>
      <%= f.input :description %>
      <%= f.input :emergency_contact_number %>
      <%= f.input :phone_number %>
      <%= f.input :avatar, as: :file %>
    </div>
    <div class="form-actions">
      <%= f.submit "Update your profile", class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
